<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="theGridPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="320.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.github.clyotska.weatherappuniproject.controller.LoginController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label alignment="CENTER" style="-fx-border-color: gray; -fx-padding: .25em; -fx-border-radius: .2em;"
               text="Log In" GridPane.columnSpan="2" GridPane.halignment="CENTER">
            <font>
                <Font name="Georgia Bold" size="28.0"/>
            </font>
        </Label>
        <Label style="-fx-border-color: gray; -fx-border-style: solid; -fx-border-width: 1px; -fx-padding: 0.25em; -fx-border-radius: 0.2em;"
               text="Enter username:" GridPane.halignment="CENTER" GridPane.rowIndex="1">
            <font>
                <Font name="Georgia Bold" size="18.0"/>
            </font>
        </Label>
        <TextField fx:id="usernameTextField" alignment="CENTER" promptText="username:" GridPane.columnIndex="1"
                   GridPane.rowIndex="1">
            <font>
                <Font name="Georgia Bold" size="18.0"/>
            </font>
        </TextField>
        <Label style="-fx-border-color: gray; -fx-border-radius: 0.2em; -fx-padding: .25em;"
               text="Enter password:" GridPane.halignment="CENTER" GridPane.rowIndex="2">
            <font>
                <Font name="Georgia" size="18.0"/>
            </font>
        </Label>
        <PasswordField fx:id="passwordPasswordField" alignment="CENTER" promptText="password:"
                       GridPane.columnIndex="1" GridPane.rowIndex="2">
            <font>
                <Font name="Georgia Bold" size="18.0"/>
            </font>
        </PasswordField>
        <Button fx:id="loginButton" mnemonicParsing="false" styleClass="btn-info" text="Log In" GridPane.columnSpan="2"
                GridPane.halignment="CENTER" GridPane.rowIndex="3" onAction="#handleLogin">
            <font>
                <Font name="Georgia Bold" size="20.0"/>
            </font>
        </Button>
        <Label fx:id="feedbackLabel" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4"
               text="" wrapText="true"/>
        <Label text="Don't have an account? Sign up" GridPane.halignment="CENTER" GridPane.rowIndex="5">
            <font>
                <Font name="Georgia" size="14.0"/>
            </font>
        </Label>
        <Button fx:id="goToSignUpButton" text="Sign Up" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                GridPane.rowIndex="5" onAction="#handleGoToSignUp"/>
    </children>
</GridPane>

